package com._520it.day01._03thread_create;

//需求:有一堆苹果(50),苹果有唯一的编号(如1 2 3 ),现有三个人开始吃苹果比赛,要求吃之前展示苹果的编号,然后吃掉,最后统计每个人吃掉苹果数量

public class EatApplesDemo2 {
	public static void main(String[] args) {
		//测试--->先放50个编号从1到50的苹果到数组arr
		for (int i = 0; i < 50; i++) {
			EatGame.arr[i] = i + 1;
		}
		
		//创建三个EatGame对象开始比赛
		for (int i = 5; i > 0 ; i --) {
			if (i == 1){
				System.out.println("比赛开始:");
				new Thread(new EatGame("小A")).start();
				new Thread(new EatGame("小B")).start();
				new Thread(new EatGame("小C")).start();
			}
		}
	}
}


//定义一个实现类测试
class EatGame implements java.lang.Runnable{
	static int[] arr = new int[50];
	private String name;
	private int count;
	
	EatGame(String s){
		this.name = s;
	}
	
	public void run(){
		for (int i = 0; i < 50; i++) {
			if (arr[i] != 0){
				System.out.println(this.name + "要吃的苹果编号为: " + arr[i]);
				arr[i] = 0;
				count ++;
			}
		}
		System.out.println(this.name + "一共吃了" + this.count + "个苹果");
	}
}