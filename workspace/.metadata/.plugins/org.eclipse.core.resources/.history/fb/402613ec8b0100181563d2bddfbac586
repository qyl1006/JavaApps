package com._520it.day01_InetAddress;

import java.net.InetAddress;
import java.net.UnknownHostException;

/*
 * Á·Ï°InetAddressÀà
 */
public class InetAddressDemo {
	public static void main(String[] args) throws Exception {
		InetAddress[] ip = InetAddress.getAllByName("www.baidu.com"); //±¾»ú
		System.out.println(ip[0]);          //localhost/127.0.0.1
		System.out.println(ip[0].getHostAddress());        //127.0.0.1
		System.out.println(ip[0].getHostName());		//localhost
		System.out.println(ip[0].isReachable(100000));   //true
	}
}
