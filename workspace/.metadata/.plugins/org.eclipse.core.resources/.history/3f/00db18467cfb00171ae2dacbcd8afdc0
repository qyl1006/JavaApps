package com._520it.day01._01_file;

import java.io.File;
import java.io.FilenameFilter;

public class FileDemo88 {
	public static void main(String[] args) {
		File dir = new File("D:/FeiqWenJian/wolfcode(FCAA14FE4115)/Ð¡Âë¿ÎÌÃ-¸Ä");
		File[] fs = test(dir);
	}

	private static File[] test(File dir) {
		return dir.getParentFile().listFiles(new FilenameFilter(){
			public boolean accept(File dir, String name) {
				return name.endsWith(".avi")  && new File(dir, name).isFile();
			}
		});
		if(dir.getParentFile().getParentFile() != null ){
			test(dir.getParentFile());
		}
	}
}
