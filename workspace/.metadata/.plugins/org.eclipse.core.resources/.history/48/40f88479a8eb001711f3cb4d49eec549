package com._520it._06_date;

import java.text.DateFormat;
import java.util.Date;



public class DateFormatDemo {
	public static void main(String[] args) {
		Date d = new Date();
		DateFormat time = DateFormat.getInstance();//Ä¬ÈÏ SHORT·ç¸ñ
		String str = time.format(d);
		System.out.println(str);
		
		System.out.println("------------------------------------");
		time = DateFormat.getDateTimeInstance(DateFormat.LONG, DateFormat.LONG);
		System.out.println(time.format(d));
	}
}
