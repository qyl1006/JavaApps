package Bank;

import java.math.BigDecimal;
import java.util.concurrent.ThreadLocalRandom;

//消费支付/取钱/
public class paymentDemo implements Runnable{
	private BankAccountDemo vlue;
	
	private int i = ThreadLocalRandom.current().nextInt(10, 20); //随机消费[10, 30)之间的一个数
	private String str = String.valueOf(i);
	private BigDecimal money = new BigDecimal(str);
	
	paymentDemo(BankAccountDemo vlue){
		this.vlue = vlue;
	}
	
	
	public void run() {
		//消费10次
		for (int i = 0; i < 10; i++) {
			try {
				vlue.alipay(money);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}
	
}
