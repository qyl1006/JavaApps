package Bank;

import java.math.BigDecimal;
import java.util.concurrent.ThreadLocalRandom;

//存入
public class DepositDemo implements Runnable{
	private BankAccountDemo vlue;
	
	private int i = ThreadLocalRandom.current().nextInt(100, 200); //随机存入[100, 200)之间的一个数
	private String str = String.valueOf(i);
	private BigDecimal money = new BigDecimal(str);
	
	DepositDemo(BankAccountDemo vlue){
		this.vlue = vlue;
	}
	
	public void run() {
		//一共存入5次
		for (int i = 0; i < 5; i++) {
			vlue.saveMoney(money);
		}
	}

}
