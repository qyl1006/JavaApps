package cn.wolfcode.shop.test;

public class Test {
	public static void main(String[] args) throws Exception {
		String str = "    ";
		boolean b = isEmpty(str);
		System.out.println(b);
		
		
		
	}
	
	public static boolean isEmpty(String str){
	     return str == null || "".equals(str.trim());
	}
}

